{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <ul>
        {% for article in articles %}
            <h3>{{ article.title }}</h3>
            <p>{{ article.content }}</p>

            <h5>Category: {{ article.category.name }}</h5>
            <div>
                {% set tags = article.tags  %}
                <h5>Tags:
                    {% for tag in tags %}
                        {{ tag.name }}{{ not loop.last ? ',' }}
                    {% endfor %}
                </h5>
            </div>
        {% endfor %}
    </ul>

{% endblock %}
